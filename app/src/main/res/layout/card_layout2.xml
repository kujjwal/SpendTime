<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:paddingBottom="10dp"
    android:weightSum="1" android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:id="@+id/cardView"
        android:layout_weight="13.43"
        android:background="#FFFFFF"
        android:elevation="5dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="513dp">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/Picture"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/name"
                android:layout_height="match_parent" />

            <TextView
                android:paddingLeft="7dp"
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:id="@+id/desc"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:text="Times"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:id="@+id/times"
                android:paddingTop="13dp"
                android:layout_above="@+id/desc"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="14dp"
                android:paddingLeft="7dp"
                android:layout_alignEnd="@+id/price" />

            <TextView
                android:text="Distance"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/dist"
                android:paddingTop="5dp"
                android:layout_alignBottom="@+id/price"
                android:layout_below="@+id/city"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/times" />

            <TextView
                android:text="Price"
                android:paddingLeft="7dp"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:paddingTop="13dp"
                android:layout_below="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:text="City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/city"
                android:paddingTop="13dp"
                android:layout_alignBaseline="@+id/times"
                android:layout_alignBottom="@+id/times"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/times" />

            <TextView
                android:text="Name"
                android:paddingLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:paddingTop="8dp"
                android:id="@+id/name"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/times"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
